<!DOCTYPE html>
<html>
  <head>
    <title>Dwidder</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="bg-light">

    <div class="container-fluid h-600">
        <div class="row">
            
            <div class="col-3 text-dark h-auto bg-dark border bg-left">
                <div class="mt-2 d-flex flex-column align-items-center">

                        <%= profile_photo %>

                    
                        
                            <%= counter %>
                        
                   
                </div>
                <div class="links d-flex flex-column">
                    <%= links %>
                </div>
            </div>
            
            <div class="col-9 p-0">
                <div class="lightblue h-auto w-959">
                    <div class="row container">
                        <nav class="nav p-1 col-2">
                            <%= link_to fa_icon('dove'), root_path, class:"fa-3x text-light ml-5 rounded" %>
                            <small class="ml-3 text-light font-weight-bold">Express yourself!</small>
                        </nav>
                        
                        <div class="nav justify-content-end mb-2 col-10 mt-3 d-flex">
                            <%= create_opinion %>
                            <%= nav_links %>
                        </div>
                    </div>
                </div>

                <div class="row">              
                    <div class="col-9 row">
                        <div class="col-3 ml-5 mt-2 text-danger">
                            <% if alert %>
                            <%= alert %>
                            <% end %>
                        </div>
                        <div class="m-1 col-9 d-flex flex-column">
                            <div>
                                <% flash.each do |type, msg| %>
                                    <div class="alert alert-info">
                                        <%= msg %>
                                    </div>
                                <% end %>
                            </div>
                            <div class="d-flex ml-5">
                                <%= yield %>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
                   
        </div>
    </div>

  </body>
</html>
