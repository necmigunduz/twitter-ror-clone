<div class="d-flex flex-column">
  <div>
  <h2>Sign In Form</h2>
  <%= form_with scope: :user, url: '/sessions' do |f| %>

    <%= f.label :username %>
    <%= f.text_field :username %>
    
    <%= f.submit "Submit" %>
  <% end %>
  </div><br />
  

  <div>
  <p>Not a member?</p>

  <% if !signed_in?%>
  <%= link_to 'Sign up', new_user_path, class: '' %>
  <% end %>
  </div>
</div>
