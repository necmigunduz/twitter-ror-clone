<div class='px-2 text-center'>
    <%=  current_user.coverImage.attached? ? image_tag(current_user.coverImage, size:"600x200") : image_tag('default_cover_image.png', size:"600x290") %>
</div>

<div class="mt-3 p-4 bg-white text-center border-5">
<h5>You can enter your new opinion here</h5><br />
<%= form_with model: @opinion, scope: "opinion", url: opinions_path do |f| %>
    <%= f.label :Opinion %>
    <%= f.text_field :text %>
    <%= f.submit "Submit" %>
<% end %>
</div>