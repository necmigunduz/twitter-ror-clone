<div class="mt-3 p-4 bg-light text-center" style="border: 5px solid lightgray">
<h5>You can enter your new opinion here</h5><br />
<%= form_with model: @opinion, scope: "opinion", url: opinions_path do |f| %>
    <%= f.label :Opinion %>
    <%= f.text_field :text %>
    <%= f.submit "Submit" %>
<% end %>
</div>